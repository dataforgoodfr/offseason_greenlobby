{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L16PO791932BTC2600P0D1N003962", "chronotag": "1715898621548", "legislature": "16", "identification": {"numeroLong": "3962", "numeroOrdreDepot": "3962", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L16PO791932BTC2600P0D1", "texteLegislatifRef": "PRJLANR5L16BTC2600", "triAmendement": "acaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaacu", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA942", "groupePolitiqueRef": "PO800532", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA605069", "PA793796", "PA719286", "PA719146", "PA721046", "PA719138", "PA267766", "PA720696", "PA267042", "PA822617", "PA795244", "PA720976", "PA607619", "PA266788", "PA721486", "PA333421", "PA793210", "PA794626", "PA2952"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;de&#160;Courson,  M.&#160;Jean-Louis&#160;Bricout, M.&#160;Taupiac, M.&#160;Colombani, M.&#160;Acquaviva, Mme&#160;Bassire, M.&#160;Castellani, M.&#160;Guy&#160;Bricout, Mme&#160;Descamps, M.&#160;Favennec-B&#233;cot&#160;, Mme&#160;Froger, M.&#160;Lenormand, M.&#160;Mathiasin, M.&#160;Molac, M.&#160;Morel-&#192;-L&apos;Huissier, M.&#160;Naegelen, M.&#160;Pancher, M.&#160;Panifous, M.&#160;Saint-Huile et M.&#160;Warsmann"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/16/textes/2600.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "3", "alineaDesignation": "Alin\u00e9a 3"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">A l&#x2019;alin&#x00E9;a&nbsp;3,&nbsp;substituer aux mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;, du pastoralisme, de la p&#x00EA;che et de l&#x2019;aquaculture&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">les mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;et de la for&#x00EA;t&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement op&#x00E8;re une double modification s'agissant de la reconnaissance d'int&#x00E9;r&#x00EA;t g&#x00E9;n&#x00E9;ral majeur de l'agriculture:&nbsp;</p><p style=\"text-align: justify;\">1&#x00B0; Il simplifie la r&#x00E9;daction en&nbsp;supprimant les termes de pastoralisme, de p&#x00EA;che et d'acquaculture, qui sont d'ores et d&#x00E9;j&#x00E0; inclus dans le terme g&#x00E9;n&#x00E9;rique d'agriculture. En effet, l'article&nbsp;L311-1 du code rural qui liste les activit&#x00E9;s agricoles pr&#x00E9;cise \"Sont r&#x00E9;put&#x00E9;es agricoles toutes les activit&#x00E9;s correspondant &#x00E0; la ma&#x00EE;trise et &#x00E0; l'exploitation d'un cycle biologique de caract&#x00E8;re v&#x00E9;g&#x00E9;tal ou animal et constituant une ou plusieurs &#x00E9;tapes n&#x00E9;cessaires au d&#x00E9;roulement de ce cycle ainsi que les activit&#x00E9;s exerc&#x00E9;es par un exploitant agricole qui sont dans le prolongement de l'acte de production ou qui ont pour support l'exploitation.\"</p><p style=\"text-align: justify;\">2&#x00B0; Il inclut la for&#x00EA;t dans le champ des activit&#x00E9;s concern&#x00E9;es par l'int&#x00E9;r&#x00EA;t g&#x00E9;n&#x00E9;ral majeur. En effet, la sylviculture joue un r&#x00F4;le majeur dans la pr&#x00E9;servation de la biodiversit&#x00E9;, du patrimoine et des paysages qu'il convient de reconnaitre.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-05-10", "datePublication": "2024-05-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2024-05-17T00:28:38+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L16PO791932BTC2600P0D1N003962?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L16S2024IDS28361", "article99": "false", "loiReference": {"codeLoi": "1", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}