{"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 8", "articleDesignationCourte": "APR\u00c8S ART. 8", "articleDesignation": "APR\u00c8S L'ARTICLE 8, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/16/textes/2436.asp#D_Article_8"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Avant le 1er janvier 2025, le Gouvernement remet au Parlement un rapport charg&#x00E9; d'analyser l'opportunit&#x00E9; et les cons&#x00E9;quences du rehaussement du seuil de l'abattement pour les exploitants agricoles dans le cadre des droits de mutation &#x00E0; titre gratuit et d'&#x00E9;valuer l'impact &#x00E9;conomique et social de cette mesure sur les exploitants agricoles.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">La d&#x00E9;mographie agricole montre qu'un nombre significatif d'agriculteurs atteindront l'&#x00E2;ge de la retraite dans les prochaines ann&#x00E9;es, et le risque que de nombreuses exploitations ne soient pas transmises faute de successeurs potentiels est une r&#x00E9;alit&#x00E9; pr&#x00E9;occupante. Dans ce contexte, il est n&#x00E9;cessaire de mettre en place des mesures visant &#x00E0; soutenir et &#x00E0; encourager l'installation des jeunes agriculteurs, ainsi que le maintien des exploitations familiales. Ce rapport du Gouvernement&nbsp;vise &#x00E0; &#x00E9;clairer la d&#x00E9;cision parlementaire sur le rehaussement du seuil de l'abattement pour les exploitants agricoles. En fournissant une analyse compl&#x00E8;te de cette mesure et de ses implications, il contribuera &#x00E0; garantir la coh&#x00E9;rence et l'efficacit&#x00E9; de notre politique agricole, dans le respect des principes de solidarit&#x00E9;, d'&#x00E9;quit&#x00E9; et de soutien aux agriculteurs.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-04-24", "datePublication": "2024-04-29", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-05-03T17:58:12+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L16PO419610B2436P0D1N001029?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "z rapport", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}