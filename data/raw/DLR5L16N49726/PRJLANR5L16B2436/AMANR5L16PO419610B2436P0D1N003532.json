{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L16PO419610B2436P0D1N003532", "chronotag": "1714735703431", "legislature": "16", "identification": {"numeroLong": "CE3532", "numeroOrdreDepot": "3532", "prefixeOrganeExamen": "CION-ECO", "numeroRect": "0"}, "examenRef": "EXANR5L16PO419610B2436P0D1", "texteLegislatifRef": "PRJLANR5L16B2436", "triAmendement": "aeaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaafzzzzxzzzzzzzzzzxr", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA720222", "groupePolitiqueRef": "PO800538", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA720342", "PA795374", "PA719664"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Girardin, rapporteur,  Mme&#160;Le&#160;Peih, rapporteure M.&#160;Lecamp, rapporteur et M.&#160;Lavergne, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/16/textes/2436.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "10", "alineaDesignation": "Alin\u00e9a 10"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Compl&#x00E9;ter l&#x2019;alin&#x00E9;a&nbsp;10 par les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;et dans le respect notamment du d&#x00E9;ploiement de la Strat&#x00E9;gie nationale biodiversit&#x00E9; 2030&nbsp;;&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Si le pr&#x00E9;sent projet de loi, et notamment le IV de l&#x2019;article L.&nbsp;1 du code rural et de la p&#x00EA;che maritime modifi&#x00E9; par l&#x2019;article&nbsp;1<sup>er</sup>, porte en lui une v&#x00E9;ritable volont&#x00E9; de favoriser la politique d&#x2019;installation des nouveaux agriculteurs et de transmission des exploitations agricoles, il importe que ce mouvement se fasse en accord avec les orientations que nous souhaitons donner collectivement &#x00E0; notre agriculture.</p><p style=\"text-align: justify;\">Il convient d&#x00E8;s lors d&#x2019;&#x00E9;viter que la transmission d&#x2019;exploitations soit l&#x2019;occasion pour les nouveaux preneurs d&#x2019;abandonner la voie qui dans laquelle l&#x2019;ancien exploitant aurait pu s&#x2019;engager en ayant choisi de s&#x2019;engager dans l&#x2019;agriculture biologique. De plus, plusieurs engagements, &#x00E0; l&#x2019;heure o&#x00F9; la fili&#x00E8;re bio est en difficult&#x00E9;, ont &#x00E9;t&#x00E9; pris par les pouvoirs publics, &#x00E0; commencer par la &#x00AB;&nbsp;boussole du d&#x00E9;ploiement de la Strat&#x00E9;gie nationale biodiversit&#x00E9; 2030&nbsp;&#x00BB; qui a notamment souhait&#x00E9; que la part de la surface agricole utile (SAU) de la France soit port&#x00E9;e &#x00E0; 21&nbsp;% &#x00E0; l&#x2019;horizon 2030.</p><p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; rappeler cet imp&#x00E9;ratif afin que le processus de transmission soit le plus efficace et le plus vertueux possible.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-04-30", "datePublication": "2024-05-02", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-05-02T00:00:00+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L16PO419610B2436P0D1N003532?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}